{
  "name": "skill-dev-proxy",
  "description": "Proxy skill for testing other skills",
  "version": "2.0.11",
  "main": "dist/client/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "init": "git config core.hooksPath ./.hooks",
    "lint": "eslint src test --ext .ts",
    "test:l": "mocha -r ts-node/register test/setup.ts test/specs/*.ts",
    "test": "LOG_LEVEL=fatal npm run test:l",
    "check": "tsnd --respawn test/check",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "deploy:heroku": "git push heroku",
    "logs": "heroku logs --tail",
    "release": "npm run lint && npm t && npm run build && npm version $VER && npm publish && git push --follow-tags --no-verify",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": "eslint --ext .ts"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@types/console-log-level": "^1.4.2",
    "@types/websocket": "^1.0.4",
    "abort-controller": "^3.0.0",
    "alice-renderer": "^1.3.2",
    "await-timeout": "^1.1.1",
    "console-log-level": "^1.4.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "node-fetch": "^2.6.1",
    "uni-skill": "^1.1.0",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.13",
    "@types/node-fetch": "^2.5.12",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "alice-tester": "^2.2.0",
    "alice-types": "^1.2.1",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-plugin-mocha": "^9.0.0",
    "get-port": "^5.1.1",
    "lint-staged": "^11.1.2",
    "mocha": "^9.0.3",
    "nock": "^13.1.1",
    "sinon": "^11.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "author": {
    "name": "Vitaliy Potapov"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/skill-dev-proxy.git"
  },
  "license": "MIT"
}
